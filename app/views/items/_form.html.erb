<div class="container">

  <% if current_user %>
    <%= form_for [@user, Item.new], remote: true do |f| %>
      <div class="form-group col-md-8">

        <%= f.label :description %>
        <%= f.text_field :description, autofocus: true, placeholder: "Enter another item", class: "js-item-description" %>   </div>   <div class="form-group col-md-8">
        <%= f.submit "Add Item To List", class: 'btn btn-success' %>
        </div>
      
    </div>
  <% end %>
<% end %>
</div>
